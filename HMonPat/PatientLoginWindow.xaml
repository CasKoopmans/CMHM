<Window x:Class="HMonPat.PatientLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HMonPat"
        mc:Ignorable="d"
        Title="PatientLoginWindow" Height="300" Width="300">
    <Grid>
        <TextBox Name="PatientIdBox" HorizontalAlignment="Left" Height="37" FontSize="26" Margin="32,107,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="234"/>
        <Button Content="Login" Click="LoginClickEvent" HorizontalAlignment="Left" Margin="32,168,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Patient Number:" HorizontalAlignment="Left" Margin="32,75,0,0" VerticalAlignment="Top" Height="27" Width="98"/>
        <Button Content="Cancel" Click="CancelClickEvent" HorizontalAlignment="Left" Margin="191,168,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.199,0.674"/>
    </Grid>
</Window>
